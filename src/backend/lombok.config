# Stop looking for other lombok.config files in parent directories
config.stopBubbling = true

# Add @Generated annotation to all generated methods for accurate code coverage reporting
lombok.addLombokGeneratedAnnotation = true

# Add @ConstructorProperties annotation for improved serialization support
lombok.anyConstructor.addConstructorProperties = true

# Specify IllegalArgumentException as standard exception for @NonNull validation
lombok.nonNull.exceptionType = IllegalArgumentException

# Standardize logger field name for @Slf4j annotation
lombok.log.fieldName = logger

# Ensure proper equals/hashCode behavior for inheritance
lombok.equalsAndHashCode.callSuper = call

# Ensure proper toString behavior for inheritance
lombok.toString.callSuper = call

# Standardize builder class naming pattern
lombok.builder.className = {0}Builder